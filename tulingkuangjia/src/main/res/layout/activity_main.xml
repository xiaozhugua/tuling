<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.tulingkuangjia.MainActivity">


    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/img_space_hight"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="54dp"
        android:background="@drawable/img_shape_space" />

    <com.example.tulingkuangjia.widget.FragementViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line" />

    <LinearLayout
        android:id="@+id/tljr_grp_bottom"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="7dp" >

        <com.example.tulingkuangjia.widget.RippleView
            android:id="@+id/tljr_img_hq"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            ripple:rv_alpha="0" >

            <ImageView
                android:id="@+id/zixuan"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_own" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/zixuan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="hahai"
                android:textColor="@color/red"
                android:textSize="11dp" />
        </com.example.tulingkuangjia.widget.RippleView>

        <com.example.tulingkuangjia.widget.RippleView
            android:id="@+id/tljr_img_hqyw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            ripple:rv_alpha="0" >

            <ImageView
                android:id="@+id/zhiyan"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_own" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/zhiyan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="hhh"
                android:textSize="11dp" />
        </com.example.tulingkuangjia.widget.RippleView>

        <com.example.tulingkuangjia.widget.RippleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            ripple:rv_alpha="0" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />
        </com.example.tulingkuangjia.widget.RippleView>

        <com.example.tulingkuangjia.widget.RippleView
            android:id="@+id/tljr_img_scqx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            ripple:rv_alpha="0" >

            <ImageView
                android:id="@+id/zixun"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_own" />

            <TextView
                android:id="@+id/zhiyant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/zixun"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="ff"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/zhiyant"
                android:text="dd"
                android:textSize="20dp" />
        </com.example.tulingkuangjia.widget.RippleView>

        <com.example.tulingkuangjia.widget.RippleView
            android:id="@+id/tljr_img_grxx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            ripple:rv_alpha="0" >

            <ImageView
                android:id="@+id/touzi"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_own" />

            <TextView
                android:id="@+id/touzit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/touzi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="rfr"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/touzit"
                android:text="â„¢"
                android:textSize="20dp" />
        </com.example.tulingkuangjia.widget.RippleView>
    </LinearLayout>

    <com.example.tulingkuangjia.widget.RippleView
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ripple:rv_alpha="0" >

        <ImageView
            android:layout_width="59dp"
            android:layout_height="70.5dp"
            android:contentDescription="@null"
            android:src="@drawable/img_own" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@null"
            android:layout_centerInParent="true"
            android:src="@drawable/img_own"/>

    </com.example.tulingkuangjia.widget.RippleView>
    
</RelativeLayout>
