<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/ly_faqi_text"
        android:background="@color/moremorelightgray"
        android:layout_alignParentLeft="true"
        android:id="@+id/ly_space2"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="fill_parent"
            android:layout_alignParentTop="true"
            android:background="@color/morelightgray"
            android:layout_height="1dp"></View>

        <ImageView
            android:id="@+id/color"
            android:layout_width="5dp"
            android:layout_height="15dp"
            android:background="@drawable/img_dian3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支持者(4)"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/color"
            android:id="@+id/tv_support_num"
            android:textColor="@color/lightGray"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>


</LinearLayout>