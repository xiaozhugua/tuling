<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="12.0dip"
    android:background="@color/tljr_bj"
    android:paddingBottom="2.0dip"
    android:paddingLeft="12.0dip"
    android:paddingTop="2.0dip" >

    <ImageView
        android:id="@+id/imp_news_picture"
        android:layout_width="70.0dip"
        android:layout_height="56.0dip"
        android:layout_marginTop="12.0dip"
        android:scaleType="fitXY"
        android:src="@drawable/img_morentupian" />

    <View
        android:id="@+id/holder_view"
        android:layout_width="0.0dip"
        android:layout_height="10.0dip"
        android:layout_below="@+id/imp_news_picture"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/imp_hqss_news_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imp_news_picture"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="12.0dip"
        android:layout_toRightOf="@+id/imp_news_picture"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lines="2"
        android:text="第四届中国财经峰会举行 聚焦新常态 "
        android:textColor="@color/tljr_text_default2"
        android:textSize="16.0sp" />

    <TextView
        android:id="@+id/imp_news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imp_news_picture"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12.0dip"
        android:layout_toRightOf="@+id/imp_news_picture"
        android:gravity="right"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="5天前"
        android:textColor="#ffaaaaaa"
        android:textSize="12.0sp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:src="@drawable/img_fengexian1" />

</RelativeLayout>