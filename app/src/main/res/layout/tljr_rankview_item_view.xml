<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp" >

    <RelativeLayout
        android:id="@+id/tljr_rankview_item"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical" 
        android:background="@drawable/img_wugudefault">

        <TextView
            android:id="@+id/rankview_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="--"/>

        <RelativeLayout
            android:id="@+id/rankview_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rankview_percent"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/rankview_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:text="--"/>

            <TextView
                android:id="@+id/rankview_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:text="--"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rankview_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/rankview_img"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/rankview_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="--"/>

                    <TextView
                        android:id="@+id/rankview_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/rankview_name"
                        android:textSize="12sp"
                        android:text="--"/>
                    
                </RelativeLayout>
            </LinearLayout>
            
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>