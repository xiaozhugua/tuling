<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 <LinearLayout
        android:id="@+id/tljr_titleGroup"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tljr_grp_hq_title"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/personal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="个人"
            android:textColor="@color/gary_shen" />

         

        <TextView
            android:id="@+id/licai"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="理财"
            android:textColor="@color/gary_shen" />

         

        <TextView
            android:id="@+id/simu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="私募  "
            android:textColor="@color/gary_shen" />
        <TextView
            android:id="@+id/jiaoyi"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="交易  "
            android:textColor="@color/gary_shen" />
        

        <ImageView
            android:id="@+id/tljr_imageView2"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_230sekuai"
            android:visibility="gone" />

    
    </LinearLayout>
    
    <ImageView
        android:id="@+id/tljr_check"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_alignBottom="@+id/tljr_titleGroup"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/img_dingtiao" />
    
 <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_below="@+id/tljr_titleGroup"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"  />
 
</RelativeLayout>
