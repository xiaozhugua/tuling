<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#fafafa" >

    <ImageView
        android:id="@+id/onesee_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@drawable/img_avatar" />

    <TextView
        android:id="@+id/onesee_nickname"
        android:layout_width="60dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@+id/onesee_icon"
        android:layout_alignLeft="@+id/onesee_icon"
        android:gravity="center"
        android:text="15153156"
        android:textColor="@color/tljr_white"
        android:textSize="10sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/onesee_icon" >

        <RelativeLayout
            android:id="@+id/info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/onesee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/onesee_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/onesee_name"
                android:textColor="@color/gray"
                android:textSize="10sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="理由:"
            android:textColor="@color/lightgray"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="发表于"
            android:textColor="@color/lightgray"
            android:textSize="10sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/fengexian" />

</RelativeLayout>