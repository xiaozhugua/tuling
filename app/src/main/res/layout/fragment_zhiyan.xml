<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/change"
        android:layout_width="fill_parent"
        android:layout_height="?attr/TitleHeight"
        android:background="?attr/TitleBj"
        android:paddingTop="?attr/TitlePadding" >

        <RelativeLayout
            android:id="@+id/serch"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/tljr_click" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/img_sousuoicon_news" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/zhiyanmenu"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/tljr_click" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/img_caidananniu1" />
        </RelativeLayout>


        <RadioGroup
            android:id="@+id/tljr_rg_futures_change"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="?attr/TitleBj"
            android:orientation="horizontal"
            android:paddingTop="?attr/TitlePadding" >

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/tab_left"
                android:button="@null"
                android:gravity="center"
                android:text="已完成"
                android:textColor="@color/checkwhilered"
                android:textSize="13sp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/tab_center"
                android:button="@null"
                android:gravity="center"
                android:text="众筹研究"
                android:textColor="@color/checkwhilered"
                android:textSize="13sp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/tab_right"
                android:button="@null"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/checkwhilered"
                android:textSize="13sp" />
        </RadioGroup>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/scroll_viewPager"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change"
        android:background="@color/white" />

</RelativeLayout>