<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/tljr_white">
    
	<LinearLayout 
	    android:id="@+id/tljr_zx_percent_linear"
	    android:layout_width="wrap_content"
	    android:layout_height="60dp"
	    android:layout_marginLeft="5dp"
	    android:orientation="vertical">
	    
	<TextView
        android:id="@+id/tljr_zx_percent_codename"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:lines="1"
        android:text="陕鼓动力"/>
	
    <TextView
        android:id="@+id/tljr_zx_percent_codeprice"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="9.16"/>
	    
	</LinearLayout>    

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        
    <RelativeLayout 
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1">

     <TextView
	    android:id="@+id/tljr_zx_percent_tinpai"
	    android:layout_width="wrap_content"
	    android:layout_height="12dp"
	    android:textSize="8sp"
	    android:layout_gravity="center"
	    android:layout_marginLeft="5dp"
	    android:layout_marginTop="5dp"
	    android:background="@color/tljr_zx_allgu_headbg"
	    android:textColor="@color/white"
	    android:paddingLeft="2dp"
	    android:paddingRight="2dp"
	    android:paddingBottom="2dp"
	    android:visibility="gone"
	    android:text="股票停牌"/>   
        
     <SeekBar
         android:id="@+id/tljr_zx_percent_codeseekbar"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingLeft="20dp"
         android:paddingRight="5dp"
         android:max="100"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true"
         android:maxHeight="10dp"
         android:minHeight="0dp"
         android:thumbOffset="0dp"
         android:progressDrawable="@drawable/tiaozheng_seekbar_bg"
         android:thumb="@drawable/tiaozheng_seekbar" />
        
    </RelativeLayout>
    
    <TextView
        android:id="@+id/tljr_zx_percent_nowpercent"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="21"/>
        
    </LinearLayout>
    
</LinearLayout>
