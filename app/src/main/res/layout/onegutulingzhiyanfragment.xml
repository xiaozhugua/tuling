<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/onegutuling_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tljr_bj"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/onegutulingzhiyan_header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="?attr/TitleBj" >

            <LinearLayout
                android:id="@+id/see"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/img_liulan" />

                <TextView
                    android:id="@+id/seenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/tljr_white"
                    android:textSize="@dimen/sp_twelve" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/ralike"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/tljr_check_shoucang"
                    android:button="@null"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/likenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/tljr_white"
                    android:textSize="@dimen/sp_twelve" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_circlewhitebj" >

                <TextView
                    android:id="@+id/care"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="@color/tljr_white"
                    android:textSize="@dimen/sp_twelve" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom"
            android:layout_below="@+id/onegutulingzhiyan_header"
            android:background="@color/white"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/img_space_hight"
                android:background="@drawable/img_shape_space" >
            </View>

            <RadioGroup
                android:id="@+id/radio"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal" >
            </RadioGroup>

            <View
                android:id="@+id/cursor"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@color/tljr_hq_zx_up" >
            </View>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/img_space_hight"
                android:background="@drawable/img_shape_space" >
            </View>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@color/tljr_hq_zx_up"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="评论"
                android:textColor="@color/c_gray_text"
                android:textSize="@dimen/sp_eighteen"
                android:visibility="gone" >
            </TextView>

            <View
                android:layout_width="@dimen/img_space_hight"
                android:layout_height="match_parent"
                android:background="@color/white" >
            </View>

            <TextView
                android:id="@+id/shared"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我要分享"
                android:textColor="@color/c_gray_text"
                android:textSize="@dimen/sp_eighteen" >
            </TextView>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout 
        android:id="@+id/faqiyanjiu_eare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        
        <Button
            android:id="@+id/faqiyanjiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/nonet_bu_shape"
            android:textColor="@color/white"
            android:text="发起研究"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/faqiyanjiu"
            android:textColor="@color/black"
            android:text="点击发起研究即可对股票发起研究"/>
        
    </RelativeLayout>
    
    
</RelativeLayout>