<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  >

    <TextView
        android:id="@+id/hqss_channel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
               android:layout_marginBottom="14dp"
        android:text="黄金"
        android:textColor="@color/tljr_balck"
        android:textSize="16sp" />

    <View
        android:id="@+id/seperate_line"
        android:layout_width="fill_parent"
        android:layout_height="0.2dip"
        android:layout_below="@+id/hqss_channel_name"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
        android:background="@color/subscribe_seperate_line" />

    <ImageView
        android:id="@+id/hqss_channel_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:background="@drawable/tljr_click"
        android:src="@drawable/img_tianjia" />

</RelativeLayout>