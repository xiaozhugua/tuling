<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:background="@color/bj" >

        <ListView
            android:id="@+id/zhiyan_list_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:divider="@null"
            android:scrollbars="none" />

        <FrameLayout
            android:id="@+id/zhiyanfinishView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="3" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/finish_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <Button
            android:id="@+id/zhiyan_finish_rebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:background="@drawable/nonet_bu_shape"
            android:layout_marginBottom="5dp"
            android:text="重新加载" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zhiyan_finish_rebtn"
            android:text="数据获取失败，请重新加载" />
        
    </RelativeLayout>

</RelativeLayout>
