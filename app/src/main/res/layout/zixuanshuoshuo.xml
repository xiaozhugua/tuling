<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    android:background="@color/bj" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/white"/>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/img_222fengexian"
        android:scaleType="fitXY"
        android:contentDescription="@null"/>
    
    <RelativeLayout
        android:id="@+id/zongzhixun"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/zongzhixun_header"
            android:layout_width="match_parent"
            android:layout_height="35dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="战略合作.益资讯" />

            <ImageView
                android:id="@+id/zongzhixun_gengduo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:contentDescription="@null"
                android:src="@drawable/img_gengduojiantou" />

            <TextView
                android:id="@+id/zongtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/zongzhixun_gengduo"
                android:text="3月2日 15:51" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/zong_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zongzhixun_header"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/img_222fengexian" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/zong_divider" >

            <ImageView
                android:id="@+id/zongimg"
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@null"
                android:src="@drawable/img_wukuangzhengquan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/zongimg"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/zongtext1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="3dp"
                    android:ellipsize="end"
                    android:lines="6"
                    android:maxEms="30"/>

                <TextView
                    android:id="@+id/zongxiangqing"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingRight="5dp"
                    android:gravity="right|top"
                    android:textColor="@color/testred"
                    android:text="详情  >>" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/zongdividersec"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/img_230fengexian" />

</LinearLayout>
