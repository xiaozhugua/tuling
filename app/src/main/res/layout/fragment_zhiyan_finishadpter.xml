<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="4dp"
    flatui:cardCornerRadius="6dp"
    flatui:cardElevation="3dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <TextView
            android:id="@+id/zhiyan_header_xian1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/white"/>

        <RelativeLayout
            android:id="@+id/zhiyan_showcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zhiyan_header_xian1" >

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="90dp" >

                <ImageView
                    android:id="@+id/im"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/img_jiahao"
                    android:contentDescription="@null"
                    android:padding="3dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/im" >

                    <RelativeLayout
                        android:id="@+id/rl_1"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp" >

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@+id/name"
                            android:textColor="@color/lightGray"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@+id/code"
                            android:background="@drawable/shape_rectangle_bj"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="F级"
                            android:textColor="@color/red"
                            android:textSize="13dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ly_star"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_1"
                        android:layout_marginTop="2dp" >

                        <TextView
                            android:id="@+id/tv_star"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="概念关联度："
                            android:textColor="@color/lightGray"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/star"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv_star"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="5dp"
                            android:text="4.5"
                            android:textColor="@color/redtitlebj"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:id="@+id/progress_star"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="5dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dp"
                            android:layout_toLeftOf="@id/star"
                            android:layout_toRightOf="@+id/tv_star"
                            android:progress="70"
                            android:progressDrawable="@drawable/color_progressbar" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ly_flower"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ly_star"
                        android:layout_marginTop="2dp" >

                        <TextView
                            android:id="@+id/tv_star2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="用户认可度："
                            android:textColor="@color/lightGray"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/flower"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv_star2"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:text="4.5"
                            android:textColor="@color/redtitlebj"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:id="@+id/progress_flower"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="5dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dp"
                            android:layout_toLeftOf="@id/flower"
                            android:layout_toRightOf="@+id/tv_star2"
                            android:progress="70"
                            android:progressDrawable="@drawable/color_progressbar" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/cen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ly_flower"
                        android:layout_marginTop="2dp" >

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:background="@drawable/shape_rectangle_bj"
                            android:gravity="center"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="信息服务"
                            android:textColor="@color/red"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/tv1"
                            android:background="@drawable/shape_rectangle_bj"
                            android:gravity="center"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="互联网金融"
                            android:textColor="@color/red"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/tv2"
                            android:background="@drawable/shape_rectangle_bj"
                            android:gravity="center"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="中小板"
                            android:textColor="@color/red"
                            android:textSize="11dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/cen"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@+id/im22"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/touxiang" />

                        <TextView
                            android:id="@+id/personname"
                            android:layout_width="70dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="2dp"
                            android:layout_toRightOf="@+id/im22"
                            android:gravity="center|left"
                            android:text="暮色萧萧"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/dv"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/personname"
                            android:background="@drawable/img_dav1"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/lv_person"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_toRightOf="@+id/personname"
                            android:gravity="center"
                            android:text="Lv 12"
                            android:textColor="@color/lightGray"
                            android:textSize="10dp" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/xian_gray" />

                <ImageView
                    android:id="@+id/haslook"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@null"
                    android:src="@drawable/img_yipiyue"
                    android:visibility="gone" />
            </RelativeLayout>

            <!-- 放中间的content -->

            <include
                android:id="@+id/zhiyan_finishitem_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl"
                android:visibility="gone"
                layout="@layout/fragment_zhiyan_finishitem_content" />

            <ImageView
                android:id="@+id/zhiyan_finishitem_drivider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/zhiyan_finishitem_content"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/img_200fengexian" />

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/zhiyan_finishitem_drivider" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true" >

                        <ImageView
                            android:id="@+id/im_1"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/img_guanzhus" />

                        <TextView
                            android:id="@+id/tv_guanzhu"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/im_1"
                            android:gravity="center"
                            android:text=" 关注(6)"
                            android:textColor="@color/lightGray"
                            android:textSize="13dp" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#CCCCCC" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true" >

                        <ImageView
                            android:id="@+id/im_2"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/img_dianping" />

                        <TextView
                            android:id="@+id/tv_pinglun"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/im_2"
                            android:gravity="center"
                            android:text=" 点评(6)"
                            android:textColor="@color/lightGray"
                            android:textSize="13dp" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#CCCCCC" />

                <RelativeLayout
                    android:id="@+id/rl_xiangqing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true" >

                        <ImageView
                            android:id="@+id/im_3"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/img_chakanxiangqing" />

                        <TextView
                            android:id="@+id/tv_DS"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/im_3"
                            android:gravity="center"
                            android:text=" 查看详情"
                            android:textColor="@color/lightGray"
                            android:textSize="13dp" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/xin3"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/zhiyan_showcontent"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/finish_itemview_jiantou"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:contentDescription="@null"
            android:src="@drawable/img_gurecordjiantou" />
    </RelativeLayout>

</android.support.v7.widget.CardView>