<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/tljr_grp_forex_title"
        android:layout_width="fill_parent"
        android:layout_height="?attr/TitleHeight"
        android:background="?attr/TitleBj" >

       <RadioGroup 
            android:id="@+id/tljr_yousuanbase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            
            <RadioButton
                android:id="@+id/tljr_yousuan_shishi"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="机器人"
                android:background="?attr/tab_left"
                android:textColor="?attr/tab_color" />
            
             <RadioButton
                android:id="@+id/tljr_yousuan_yanjiu"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="策略池"
                android:background="?attr/tab_center"
                android:textColor="?attr/tab_color" />
             
             <RadioButton
                android:id="@+id/tljr_yousuan_my"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="我的"
                android:background="?attr/tab_right"
                android:textColor="?attr/tab_color" />
             
        </RadioGroup>
        
    </RelativeLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/yousuanfragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    

</LinearLayout>
