<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!-- 这是onegu的新闻fragment -->

    <ScrollView
        android:id="@+id/fragment_onegu_xinwen_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:descendantFocusability="blocksDescendants"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/img_biaoqian"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:text="公司新闻"
                        android:textColor="#ffffff"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </RelativeLayout>

            <!-- 公司新闻 -->


            <TextView
                android:id="@+id/fragment_onegu_xinwen_layout_companey_news_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="公司新闻加载中······"/>

            <ListView
                android:id="@+id/fragment_onegu_xinwen_companey_news_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#F5F5F5"
                android:dividerHeight="1dp"
                android:visibility="gone"
                >


            </ListView>


            <!-- 行业新闻 -->

            <LinearLayout
                android:id="@+id/fragment_onegu_xinwen_industry_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5F5F5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/img_biaoqian"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="10dp"
                            android:text="行业新闻"
                            android:textColor="#ffffff"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                </RelativeLayout>


                <TextView
                    android:id="@+id/fragment_onegu_xinwen_business_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="行业新闻加载中······"/>

                <ListView
                    android:id="@+id/fragment_onegu_xinwen_business_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#F5F5F5"
                    android:dividerHeight="1dp"
                    android:visibility="gone"
                    ></ListView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>