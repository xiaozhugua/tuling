<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tljr_txt_search_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/tljr_txt_search_code"
        android:text="美的集团"
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tljr_txt_search_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="000600"
        android:textColor="@color/tljr_balck"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/tljr_grp_search_jiahao"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/tljr_click" >

        <CheckBox
            android:id="@+id/tljr_img_search_jiahao"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:background="@drawable/tljr_rd_serch"
            android:clickable="false"
            android:button="@null" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/tljr_imageView1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/img_fengexian1" />

</RelativeLayout>