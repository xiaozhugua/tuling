<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.abct.tljr.main.MainActivity" >

    <RelativeLayout
        android:id="@+id/image_download_news"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/white" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.01px"
            android:layout_alignParentBottom="true"
            android:background="@color/subscribe_seperate_line" />

        <TextView
            android:id="@+id/tv_search_num"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="15dp"
            android:lines="2"
            android:textColor="@color/lightgray"
            android:text="清除 搜索记录"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>