<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView 
        android:id="@+id/changepercent_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/img_cebianyinying"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="-12dp"
        android:gravity="center"
        android:background="@drawable/img_cebianbeijing">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:layout_marginLeft="30dp"
            android:src="@drawable/img_230fengexian"/>
        
        <LinearLayout 
            android:id="@+id/changpercent_lishihuice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@null"
                android:layout_gravity="center_vertical"
                android:src="@drawable/img_huice"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="历史回测"/>
            
        </LinearLayout>
        
        <ImageView
            android:layout_width="200dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:layout_marginLeft="30dp"
            android:src="@drawable/img_230fengexian"/>
        
        <LinearLayout
            android:id="@+id/changpercentitem_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@null"
                android:layout_gravity="center_vertical"
                android:src="@drawable/img_tianjiagupiao"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="添加股票"/>
        </LinearLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:layout_marginLeft="30dp"
            android:src="@drawable/img_230fengexian"/>

        <LinearLayout
            android:id="@+id/changpercentitem_shanchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@null"
                android:layout_gravity="center_vertical"
                android:src="@drawable/img_shanchugegu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="删除个股"/>
        </LinearLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:layout_marginLeft="30dp"
            android:src="@drawable/img_230fengexian"/>
        
        <LinearLayout
            android:id="@+id/changpercentitem_gaiming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@null"
                android:layout_gravity="center_vertical"
                android:src="@drawable/img_fenzugaiming"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="分组改名"/>
        </LinearLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:layout_marginLeft="30dp"
            android:src="@drawable/img_230fengexian"/>
        
        <LinearLayout
            android:id="@+id/changpercentitem_beizu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@null"
                android:layout_gravity="center_vertical"
                android:src="@drawable/img_beizhu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="添加备注"/>
        </LinearLayout>
        
        <ImageView
            android:layout_width="200dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:layout_marginLeft="30dp"
            android:src="@drawable/img_230fengexian"
            android:visibility="gone"/>
        
    </LinearLayout>
    
    
    
</LinearLayout>

