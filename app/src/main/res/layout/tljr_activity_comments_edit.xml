<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/tljr_grp_futures_join_title"
        android:layout_width="fill_parent"
        android:layout_height="?attr/TitleHeight"
        android:paddingTop="?attr/TitlePadding"
        android:background="?attr/TitleBj">
 		<include
            android:id="@+id/tljr_img_futures_join_back"
            layout="@layout/tljr_click_back" />
		<TextView
            android:id="@+id/tljr_img_futures_join_title"
            android:layout_width="wrap_content"
        android:paddingTop="?attr/TitlePadding"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="评论"
            android:textColor="?attr/TitleTextColor"
            android:textSize="?attr/TitleTextSize" />
		
		<TextView 
		    android:id="@+id/send"
		    android:layout_width="50dp"
		    android:layout_height="fill_parent"
        android:paddingTop="?attr/TitlePadding"
		    android:text="发送"
		    android:textColor="@color/white"
		    android:gravity="center"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"/>
    </RelativeLayout>
    <EditText 
        android:id="@+id/edit"
        android:gravity="top"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_height="fill_parent"/>

    
</LinearLayout>
