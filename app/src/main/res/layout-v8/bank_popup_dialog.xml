<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tljr_bj">

    <RelativeLayout
        android:id="@+id/bank_list"
        android:layout_width="fill_parent"
        android:layout_height="?attr/TitleHeight"
        android:background="?attr/TitleBj">

        <TextView
            android:id="@+id/tljr_txt_ltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择开户城市"
            android:textColor="?attr/TitleTextColor"
            android:textSize="?attr/TitleTextSize" />

        <include
            android:id="@+id/tljr_btn_lfanhui"
            layout="@layout/tljr_view_back" />
    </RelativeLayout>


    <ListView
        android:id="@+id/listview_pop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bank_list"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <com.abct.tljr.jiaoyi.zsl.turnout.SideBar
        android:id="@+id/pop_sidebar"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@id/bank_list" />

</RelativeLayout>
